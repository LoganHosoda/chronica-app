<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your chronicles</p>
{{#if chronicles}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th>Title</th>
      </tr>
    </thead>
    <tbody>
      {{#each chronicles}}
        <tr>
          <td><a href="/chronicles/{{_id}}"></a>{{title}}</td>
          <td>{{createdAt}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td></td>
        </tr>
      {{/each}}
    </tbody>
  </table>

{{else}}
  <p>You have not created any chronicles</p>
{{/if}}
